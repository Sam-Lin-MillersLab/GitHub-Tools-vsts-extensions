{
    "id": "1c3396d6-5af6-4ccc-8169-199ec6541d23",
    "name": "GitHubRelease",
    "friendlyName": "Create GitHub Release",
    "description": "Create a GitHub release",
    "helpMarkDown": "Create a GitHub Release v0.0.22 [More Information](https://github.com/mikaelkrief/GitHub-Tools-vsts-extensions)",
    "releaseNotes": " Add first version",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Mikael Krief",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 24
    },
    "demands": [],
    "inputs": [
        {
            "name": "githubEndpoint",
            "type": "connectedService:github",
            "label": "GitHub Connection",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the service endpoint for your GitHub connection. To create one, click the Manage link and create a new service endpoint."
        },
        {
            "name": "repositoryName",
            "type": "pickList",
            "label": "Repository",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Full name of the GitHub repository e.g. name/myrepository, default value $(Build.Repository.Name)",
            "properties": {
                "DisableManageLink": "True"
            }
        },
        {
            "name": "tag",
            "type": "string",
            "label": "Tag",
            "defaultValue": "$(Build.BuildNumber)",
            "required": true,
            "helpMarkDown": "Tag to associate to commit, default value $(Build.BuildNumber) for tag the commit with the current build number"
        },
        {
            "name": "branch",
            "type": "string",
            "label": "Branch",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The branch to release"
        },
        {
            "name": "releaseName",
            "type": "string",
            "label": "Release name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Release name"
        },
        {
            "name": "isdraft",
            "type": "boolean",
            "label": "Is draft release ?",
            "defaultValue": "true",
            "required": true,
            "helpMarkDown": "Is draft"
        },
        {
            "name": "isprerelease",
            "type": "boolean",
            "label": "Is Pre Release ?",
            "defaultValue": "false",
            "required": true,
            "helpMarkDown": "Is pre release"
        },
        {
            "name": "releasenote",
            "type": "multiLine",
            "label": "Release note",
            "defaultValue": "$(build.SourceVersionMessage)",
            "required": true,
            "helpMarkDown": "Release name, default value $(build.SourceVersionMessage)",
            "properties": {
                "resizable": "true",
                "rows": "4"
            }
        }
    ],
    "sourceDefinitions": [
        {
            "target": "repositoryName",
            "endpoint": "/$(system.teamProject)/_apis/sourceProviders/GitHub/repositories?serviceEndpointId=$(githubEndpoint)",
            "selector": "jsonpath:$.value[*].id",
            "keySelector": "jsonpath:$.value[*].id",
            "authKey": "tfs:teamfoundation"
        }
    ],
    "instanceNameFormat": "Create GitHub Release",
    "execution": {
        "PowerShell3": {
            "target": "$(currentDirectory)\\GitHubRelease.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}